<html lang="en">
  <head>
    <!-- Link bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="../public/stylesheet/style.css" />
    <title>Document</title>
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg navbar-light fixed-top"
      style="background-color: #e3f2fd"
    >
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="../public/logo/logo.png" alt="" width="36" height="24" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse ms-3" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item ms-3">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item ms-4">
                <a class="nav-link" href="/my-project">Add Project</a>
              </li>
            {{/if}}
          </ul>
          <div>
            {{#if isLogin}}
              <ul class="navbar-nav me-auto mt-3 mb-lg-0">
                <li class="nav-item me-4">
                  <p class="nav-link">Hello, {{user.name}}</p>
                </li>
                <li class="nav-item me-4">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              </ul>
            {{else}}
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item me-4">
                  <a
                    class="nav-link"
                    aria-current="page"
                    href="/login"
                  >Login</a>
                </li>
                <li class="nav-item me-4">
                  <a class="nav-link" href="/register">Register</a>
                </li>
              </ul>
            {{/if}}
          </div>
          <div class="d-flex" id="contactme">
            <a class="nav-link" href="/contact">Contact Me</a>
          </div>
        </div>
      </div>
    </nav>

    <div
      class="container-fluid d-flex justify-content-center pt-5"
      id="project-detail"
    >
      <div class="container">
        <h1>{{project.name}}</h1>
        <div class="d-flex container-detail-project">
          <div class="me-4" style="width: 77%;">
            <img
              src="../public//image/1597827883.jpg"
              alt=""
              style="width: 100%;"
            />
          </div>
          <div class="ms-4 mt-2 container-info-project" style="width: 23%;">
            <h3>Duration</h3>
            <div class="d-flex align-items-end mb-4 mt-3">
              <img src="../public/logo/calendar.png" alt="" />
              <label>{{project.startDate}} - {{project.endDate}}</label>
            </div>
            <div class="d-flex align-items-end mb-5">
              <img src="../public/logo/calendar.png" alt="" />
              <label>{{project.duration}}</label>
            </div>

            <h3>Technologies</h3>
            <div class="d-flex">
              <div class="me-5">
                <div class="d-flex align-items-end mb-4 mt-3">
                  <img src="../public/logo/react.png" alt="" />
                  <label>NodeJS</label>
                </div>
                <div class="d-flex align-items-end">
                  <img src="../public/logo/next.png" alt="" />
                  <label>ReactJS</label>
                </div>
                <div class="d-flex align-items-end mb-4 mt-3">
                  <img src="../public/logo/next.png" alt="" />
                  <label>NextJS</label>
                </div>
                <div class="d-flex align-items-end">
                  <img src="../public/logo/typescript.png" alt="" />
                  <label>TypeScript</label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <p>{{project.description}}</p>
      </div>
    </div>
  </body>
</html>