<html lang="en">
  <head>
    <!-- Link bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="../public/stylesheet/style.css" />
    <title>Document</title>
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg navbar-light fixed-top"
      style="background-color: #e3f2fd"
    >
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="../public/logo/logo.png" alt="" width="36" height="24" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse ms-3" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item ms-3">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            <li class="nav-item ms-4">
              <a class="nav-link" href="/my-project">Add Project</a>
            </li>
          </ul>
          <div>
            {{#if isLogin}}
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item me-4">
                  <p class="nav-link">Hello, {{user.name}}</p>
                </li>
                <li class="nav-item me-4">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              </ul>
            {{else}}
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item me-4">
                  <a
                    class="nav-link"
                    aria-current="page"
                    href="/login"
                  >Login</a>
                </li>
                <li class="nav-item me-4">
                  <a class="nav-link" href="/register">Register</a>
                </li>
              </ul>
            {{/if}}
          </div>
          <div class="d-flex" id="contactme">
            <a class="nav-link" href="/contact">Contact Me</a>
          </div>
        </div>
      </div>
    </nav>

    <div
      class="container-fluid d-flex justify-content-center pt-5"
      id="form-project"
      style="background-color: #E3E7EB;"
    >
      <div class="container-form">
        <form action="/home" method="POST">
          <h1>ADD MY PROJECT</h1>
          <div class="mb-4 mt-5">
            <label for="project-name" class="form-label">Project Name</label>
            <input
              type="text"
              class="form-control"
              id="project-name"
              aria-describedby="emailHelp"
              name="projectName"
            />
          </div>
          <div class="d-flex justify-content-between">
            <div class="mb-4" style="width: 49%;">
              <label for="input-startdate" class="form-label">Start Date</label>
              <input
                type="date"
                class="form-control"
                id="input-startdate"
                aria-describedby="emailHelp"
                name="startDate"
              />
            </div>
            <div class="mb-4" style="width: 49%;">
              <label for="input-enddate" class="form-label">End Date</label>
              <input
                type="date"
                class="form-control"
                id="input-enddate"
                aria-describedby="emailHelp"
                name="endDate"
              />
            </div>
          </div>
          <div class="mb-4">
            <label
              for="input-description"
              class="form-label"
            >Description</label>
            <textarea
              class="form-control"
              name="description"
              id="input-description"
              cols="30"
              rows="10"
            ></textarea>
          </div>

          <div class="mb-4" id="technologies">
            <label for="#" class="form-label">Technologies</label>
            <div class="container-technologies d-flex">
              <div class="left-technologies">
                <div>
                  <input
                    type="checkbox"
                    id="nodeJS"
                    aria-describedby="emailHelp"
                    name="tech"
                    value="node.png"
                  />
                  <label for="nodejs" class="form-label">Node JS</label>
                </div>

                <div>
                  <input
                    type="checkbox"
                    id="reactJS"
                    aria-describedby="emailHelp"
                    name="tech"
                    value="react.png"
                  />
                  <label for="reactJS" class="form-label">React JS</label>
                </div>
              </div>
              <div class="left-technologies">
                <div>
                  <input
                    type="checkbox"
                    id="nextJS"
                    aria-describedby="emailHelp"
                    name="tech"
                    value="next.png"
                  />
                  <label for="nextJS" class="form-label">Next JS</label>
                </div>

                <div>
                  <input
                    type="checkbox"
                    id="typeScript"
                    aria-describedby="emailHelp"
                    name="tech"
                    value="typescript.png"
                  />
                  <label for="typeScript" class="form-label">TypeScript</label>
                </div>
              </div>
            </div>
          </div>

          <div class="mb-5 input-file">
            <label>Upload Image</label>
            <div class="input-group mt-2">
              <input
                type="file"
                class="form-control"
                id="inputGroupFile02"
                name="image"
              />
            </div>
          </div>

          <div class="button-submit mb-4">
            <button>Submit</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>